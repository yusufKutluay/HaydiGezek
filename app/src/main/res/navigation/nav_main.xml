<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_main"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.yusufkutluay.haydigezeknavigation.AnaSayfaMenu.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_profilFragment3"
            app:destination="@id/profilFragment" />
        <action
            android:id="@+id/action_homeFragment_to_shareFragment"
            app:destination="@id/shareFragment" />
        <action
            android:id="@+id/action_homeFragment_to_bilgiFragment"
            app:destination="@id/bilgiFragment" />
        <action
            android:id="@+id/action_homeFragment_to_sehirFragment"
            app:destination="@id/sehirFragment" />
    </fragment>
    <fragment
        android:id="@+id/profilFragment"
        android:name="com.yusufkutluay.haydigezeknavigation.ProfilMenu.ProfilFragment"
        android:label="fragment_profil"
        tools:layout="@layout/fragment_profil" >
        <action
            android:id="@+id/action_profilFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <action
            android:id="@+id/action_profilFragment_to_shareFragment"
            app:destination="@id/shareFragment" />
        <action
            android:id="@+id/action_profilFragment_to_gonderiFragment"
            app:destination="@id/gonderiFragment" />
        <action
            android:id="@+id/action_profilFragment_to_seyahatlerimFragment"
            app:destination="@id/seyahatlerimFragment" />
    </fragment>
    <fragment
        android:id="@+id/shareFragment"
        android:name="com.yusufkutluay.haydigezeknavigation.PaylasMenu.ShareFragment"
        android:label="fragment_share"
        tools:layout="@layout/fragment_share" >
        <action
            android:id="@+id/action_shareFragment_to_profilFragment"
            app:destination="@id/profilFragment" />
        <action
            android:id="@+id/action_shareFragment_to_yazPaylasFragment"
            app:destination="@id/yazPaylasFragment" />
    </fragment>
    <fragment
        android:id="@+id/yazPaylasFragment"
        android:name="com.yusufkutluay.haydigezeknavigation.PaylasMenu.YazPaylasFragment"
        android:label="YazPaylasFragment" >
        <action
            android:id="@+id/action_yazPaylasFragment_to_shareFragment"
            app:destination="@id/shareFragment" />
    </fragment>
    <fragment
        android:id="@+id/listeFragment"
        android:name="com.yusufkutluay.haydigezeknavigation.RotaMenu.ListeFragment"
        android:label="fragment_liste"
        tools:layout="@layout/fragment_liste" />
    <fragment
        android:id="@+id/bilgiFragment"
        android:name="com.yusufkutluay.haydigezeknavigation.Bilgi.BilgiFragment"
        android:label="fragment_bilgi"
        tools:layout="@layout/fragment_bilgi">
        <argument
            android:name="rotaName"
            app:argType="string" />
        <action
            android:id="@+id/action_bilgiFragment_to_sehirFragment"
            app:destination="@id/sehirFragment" />
        <argument
            android:name="fragment"
            app:argType="string" />
        <action
            android:id="@+id/action_bilgiFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/gonderiFragment"
        android:name="com.yusufkutluay.haydigezeknavigation.ProfilMenu.GonderiFragment"
        android:label="fragment_gonderi"
        tools:layout="@layout/fragment_gonderi" >
        <action
            android:id="@+id/action_gonderiFragment_to_profilFragment"
            app:destination="@id/profilFragment" />
    </fragment>
    <fragment
        android:id="@+id/sehirFragment"
        android:name="com.yusufkutluay.haydigezeknavigation.Sehirler.SehirFragment"
        android:label="fragment_sehir"
        tools:layout="@layout/fragment_sehir" >
        <action
            android:id="@+id/action_sehirFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="name"
            app:argType="string" />
        <action
            android:id="@+id/action_sehirFragment_to_bilgiFragment"
            app:destination="@id/bilgiFragment" />
    </fragment>
    <fragment
        android:id="@+id/seyahatlerimFragment"
        android:name="com.yusufkutluay.haydigezeknavigation.ProfilMenu.SeyahatlerimFragment"
        android:label="fragment_seyahatlerim"
        tools:layout="@layout/fragment_seyahatlerim" >
        <action
            android:id="@+id/action_seyahatlerimFragment_to_profilFragment"
            app:destination="@id/profilFragment" />
    </fragment>

</navigation>